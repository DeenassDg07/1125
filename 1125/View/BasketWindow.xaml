<Window x:Class="_1125.View.BasketWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1125.View"
        mc:Ignorable="d"
        Title="BasketWindow" Height="450" Width="700">
    <Border BorderBrush="#2027BC" BorderThickness="15">
        <Grid>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
            <StackPanel Grid.Row="1" Orientation="Horizontal">
                <TextBlock Text="Общая сумма:" VerticalAlignment="Center" HorizontalAlignment="Right" Foreground="#2027BC" FontSize="20"/>
                <Border BorderBrush="#2027BC" BorderThickness="3" Height="35" Margin="0,0,20,0">
                    <TextBlock Height="35" Width="165" VerticalAlignment="Center" />
                </Border>
                <Button BorderThickness="0" Height="35" Width="165" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="20" Content="Назад" Foreground="White" Background="#FF2027BC" Margin="0,0,15,0">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border 
                Background="{TemplateBinding Background}"
                BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}"
                CornerRadius="20">
                        <ContentPresenter 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
            <Button BorderThickness="0" Height="35" Width="165" VerticalAlignment="Center" HorizontalAlignment="Right
                " FontSize="20" Content="Заказать" Foreground="White" Background="#FF2027BC">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border 
    Background="{TemplateBinding Background}"
    BorderBrush="{TemplateBinding BorderBrush}"
    BorderThickness="{TemplateBinding BorderThickness}"
    CornerRadius="20">
                            <ContentPresenter 
        HorizontalAlignment="Center" 
        VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            </StackPanel>
        </Grid >
        </Border>
</Window>
