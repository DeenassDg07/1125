<Window x:Class="_1125.View.BasketWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1125.View"
        mc:Ignorable="d"
        Title="BasketWindow" Height="450" Width="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="130"/>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition Width="167"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition />
            <RowDefinition Height="20"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Общая сумма:" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" Foreground="#2027BC" FontSize="20"/>
        <TextBox Grid.Row="3" Grid.Column="2" Height="35" Width="165" VerticalAlignment="Center" />
        <Button BorderThickness="0" Grid.Row="3" Grid.Column="4" Height="35" Width="165" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="20" Content="Войти" Foreground="White" Background="#FF2027BC">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border 
                Background="{TemplateBinding Background}"
                BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}"
                CornerRadius="20">
                        <ContentPresenter 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button BorderThickness="0" Grid.Row="3" Grid.Column="3" Height="35" Width="165" VerticalAlignment="Center" HorizontalAlignment="Right
                " FontSize="20" Content="Назад" Foreground="White" Background="#FF2027BC">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border 
    Background="{TemplateBinding Background}"
    BorderBrush="{TemplateBinding BorderBrush}"
    BorderThickness="{TemplateBinding BorderThickness}"
    CornerRadius="20">
                        <ContentPresenter 
        HorizontalAlignment="Center" 
        VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
            </Button>
        <ListBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4">
            
        </ListBox>
    </Grid >
</Window>
