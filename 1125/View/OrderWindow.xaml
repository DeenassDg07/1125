<Window x:Class="_1125.View.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1125.View"
        mc:Ignorable="d"
        Title="OrderWindow" Height="120" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="140"/>
            <ColumnDefinition />
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="1" Grid.Column="1" Text="Ваш заказ приедет:" Foreground="#2027BC" FontSize="15" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="138"/>
        <DataGrid Grid.Row="1" Grid.Column="2" Height="25" Width="100" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
        <Button BorderThickness="0" Content="отмена" Grid.Row="2" Grid.Column="1" Width="100" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Center" Background="#FF2027BC" Foreground="White" />
        <Button BorderThickness="0" Content="ок" Grid.Row="2" Grid.Column="2" Width="100" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Center"  Background="#FF2027BC" Foreground="White" />
    </Grid>
</Window>
