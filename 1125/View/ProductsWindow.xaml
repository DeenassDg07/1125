<Window x:Class="_1125.View.ProductsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1125.View"
        mc:Ignorable="d"
        Title="ProductsWindow" Height="450" Width="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="230"/>
            <ColumnDefinition Width="55"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition />
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Поиск:" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" FontSize="20"/>
        <DataGrid Grid.Column="2" Width="220" HorizontalAlignment="Left" Background="#FF2027BC" SelectionChanged="DataGrid_SelectionChanged" Height="30" Margin="10,0,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.503,0.182" />
        <Button Grid.Column="3" Width="50" HorizontalAlignment="Left">
            <Button.Background>
                <ImageBrush ImageSource="/View/Снимок экрана 2025-05-10 195229.png"/>
            </Button.Background>
        </Button>
    </Grid>
</Window>
