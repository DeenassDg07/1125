<Window x:Class="_1125.View.ProductsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1125.View"
        mc:Ignorable="d"
        Title="ProductsWindow" Height="450" Width="700">
    <Window.Resources>
        <Style x:Key="ColoredComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#FFE0E0E0"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="#2027BC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="150"/>
        </Style>
    </Window.Resources>
    <Border BorderBrush="#2027BC" BorderThickness="15">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition />
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="230"/>
                <ColumnDefinition Width="55"/>
                <ColumnDefinition Width="5"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="5"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition />
                <RowDefinition/>
                <RowDefinition Height="5"/>
            </Grid.RowDefinitions>
            <Border BorderBrush="#2027BC" BorderThickness="3" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1">
                <TextBox Width="365" Text="Поиск:" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1"  Grid.ColumnSpan="2" FontSize="20"  Grid.Row="1"/>
                </Border>
            <ComboBox  Grid.Column="3" Grid.Row="1" Width="220" HorizontalAlignment="Right" SelectionChanged="DataGrid_SelectionChanged" Height="30" VerticalAlignment="Center"
                Style="{StaticResource ColoredComboBoxStyle}">
                <ComboBoxItem>Item 1</ComboBoxItem>
                <ComboBoxItem>Item 2</ComboBoxItem>
            </ComboBox>
            <Button Grid.Column="4" Grid.Row="1" Width="50" HorizontalAlignment="Left">
                <Button.Background>
                    <ImageBrush ImageSource="/View/Снимок экрана 2025-05-10 195229.png"/>
                </Button.Background>
            </Button>
            <Button BorderThickness="0" Grid.Row="2" Grid.Column="1" Background="#FF2027BC" Foreground="White" Content="Назад" FontSize="20"/>
            <ListBox Grid.Row="3"  Grid.RowSpan="4"  Grid.Column="1" Grid.ColumnSpan="4">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                       
                        
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Border>
</Window>
