<Window x:Class="_1125.View.ProductsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1125.View"
        mc:Ignorable="d"
        Title="ProductsWindow" Height="450" Width="700">
    <Window.Resources>
        <Style x:Key="ColoredComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#FFE0E0E0"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="#2027BC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="150"/>
        </Style>
    </Window.Resources>
    <Border BorderBrush="#2027BC" BorderThickness="15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="5"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <StackPanel  Orientation="Horizontal" Grid.Row="1"  >
                <Border BorderBrush="#2027BC" BorderThickness="3" Width="350" Height="35" Margin="5,0,15,0">
                    <TextBox Width="350" Text="Поиск:" HorizontalAlignment="Left" Height="35" VerticalAlignment="Center" FontSize="20"   />
                </Border>
                <ComboBox  Width="245" Height="35" />
                <Button Width="50">
                    <Button.Background>
                        <ImageBrush ImageSource="/View/Снимок экрана 2025-05-10 195229.png"/>
                    </Button.Background>
                </Button>
            </StackPanel>

            <Button BorderThickness="0" Grid.Row="2"  Width="150" HorizontalAlignment="Left" Background="#FF2027BC" Foreground="White" Content="Назад" FontSize="20" Margin="5,0,0,0"/> 
            
            <ListBox Grid.Row="3" >
    <ListBox.ItemTemplate>
        <DataTemplate>
           
            
        </DataTemplate>
    </ListBox.ItemTemplate>
</ListBox>
        </Grid>
    </Border>
</Window>
