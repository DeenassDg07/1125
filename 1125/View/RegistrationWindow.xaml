<Window x:Class="_1125.View.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1125.View"
        mc:Ignorable="d"
        Title="RegistrationWindow" Height="350" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Логин:" FontSize="20" Foreground="#FF555555" Height="40" Grid.Row ="0" Width="250" VerticalAlignment="Bottom" HorizontalAlignment="Center"  />
        <TextBlock Text="Пароль:" FontSize="20" Foreground="#FF555555" Height="40" Grid.Row ="1" Width="250" />
        <TextBlock Text="Повторить пароль:" FontSize="20" Foreground="#FF555555" Height="40" Grid.Row ="2" Width="250" />
        <Button BorderThickness="0" Content="Войти" Foreground="White" FontSize="20" Grid.Row ="3" Background="#FF2027BC" Width="250" Height="40" VerticalAlignment="Top"/>

    </Grid>
</Window>
