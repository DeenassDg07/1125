<Window x:Class="_1125.View.EntranceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1125.View"
        mc:Ignorable="d"
        Title="EntranceWindow" Height="350" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition />
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Логин:" FontSize="20" Foreground="#FF555555" Height="40" Grid.Row ="0" Width="200" VerticalAlignment="Bottom" HorizontalAlignment="Center"  />
        <TextBlock Text="Пароль:" FontSize="20" Foreground="#FF555555" Height="40" Grid.Row ="1" Width="200" />
        <Border Grid.Row ="2" CornerRadius="5"  >
            <Button BorderThickness="0" Content="Войти" Foreground="White" FontSize="20" Grid.Row ="2" Background="#FF2027BC" Width="200" Height="40"/>
        </Border>
        <Button  BorderThickness="0" Content="Регистрироваться" Foreground="#2027BC" FontSize="20" Grid.Row ="3" Width="200" Height="40" Background="White" VerticalAlignment="Top"/>
       
    </Grid>
</Window>
